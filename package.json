{
  "name": "manta-style",
  "private": true,
  "scripts": {
    "format": "prettier --parser typescript './packages/**/*.ts' --write",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "watch": "lerna run --parallel watch",
    "test": "lerna exec \"yarn test --coverage\" && codecov -t $CODECOV_TOKEN"
  },
  "devDependencies": {
    "codecov": "^3.0.4",
    "lerna": "^3.0.3",
    "prettier": "^1.14.2"
  },
  "workspaces": [
    "packages/core/*",
    "packages/plugins/*"
  ]
}
