{
  "name": "manta-style",
  "private": true,
  "scripts": {
    "dev:flow": "echo \"Remove this when done\" && lerna run --parallel watch --scope=@manta-style/runtime --scope=@manta-style/plugin-builder-flowtype",
    "format": "prettier --parser typescript './packages/**/*.ts' --write",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "watch": "lerna run --parallel watch",
    "test": "lerna exec \"yarn test --coverage\" && codecov -t $CODECOV_TOKEN",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "codecov": "^3.0.4",
    "husky": "^0.14.3",
    "lerna": "^3.0.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2"
  },
  "workspaces": [
    "packages/core/*",
    "packages/plugins/*"
  ],
  "lint-staged": {
    "linters": {
      "*.{ts,json}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
