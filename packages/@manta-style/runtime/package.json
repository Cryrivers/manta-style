    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "faker": "^4.1.0",
    "lodash-es": "^4.17.10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
